                       , filepath >= 1.4 && <= 1.5
                       , ghc
                       , hpc >= 0.6.0.0 && < 0.6.1
                       , text
                       , unordered-containers >= 0.2 && < 0.3
  default-language:    Haskell2010
  ghc-options:         -threaded -Wall
                       -- -fprof-auto "-with-rtsopts=-p"
  hs-source-dirs:      rewritev
  main-is:             Main.hs
  other-modules:         ZenoSuite

test-suite test
  build-depends:         g2
                       , base >= 4.8 && < 5
                       , containers
                       , directory
                       , filepath
                       , ghc-paths
                       , ghc
                       , hashable
                       , hpc
                       , tagged
                       , tasty >= 1.0 && < 2.0
                       , tasty-hunit >= 0.10 && < 0.10.0.3
                       , tasty-quickcheck
                       , text
                       , time >= 1.6
                       , unordered-containers
  default-language:    Haskell2010
  hs-source-dirs:      tests
  main-is:             Test.hs
  other-modules:         CaseTest
                       , DefuncTest
                       , Expr
                       , GetNthTest
                       , HigherOrderMathTest
                       , InputOutputTest
                       , PeanoTest
                       , Reqs
                       , Simplifications
                       , TestUtils
                       , Typing
                       , UFMapTests
                       , UnionFindTests
                       , RewriteVerify.RewriteVerifyTest
  ghc-options:         -Wall
                       -- -fprof-auto "-with-rtsopts=-p"
                       -threaded
  type:                exitcode-stdio-1.0
