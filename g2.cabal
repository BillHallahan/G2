  build-depends:         array >= 0.5.1.1 && <= 0.5.3.0 
                       , Cabal >= 2.0.1.0 && < 2.5
                       , base >= 4.8 && < 5
                       , bimap == 0.3.3
                       , bytestring >= 0.10.8.0 && <= 0.10.8.2
                       , clock >= 0.8 && < 0.9
                       , concurrent-extra >= 0.7
                       , containers >= 0.5 && < 0.7
                       , directory >= 1.3.0.2 && <= 1.3.3.2
                       , extra >= 1.6.14 && <= 1.6.17
                       , filepath >= 1.4 && <= 1.5
                       , ghc-paths >= 0.1 && < 0.2
                       , ghc (>= 8.2.2 && < 8.4) || (>= 8.6 && < 8.7)
                       , hashable >= 1.2.6.0 && <= 1.3.0.0
                       , hpc >= 0.6.0.0 && < 0.6.1
                       , HTTP >= 4000.3.0 && < 4001.0
                       , language-sygus >= 0.1.1.2 && < 0.2
                       , liquidhaskell >= 0.8.2.2 && <= 8.6.2
                       , liquid-fixpoint == 0.7.0.7
                       , MissingH >= 1.4.0.0 && < 1.5
                       , mtl >= 2.2 && < 2.3
                       , random == 1.1
                       , reducers >= 3.12 && < 3.13
                       , regex-compat >= 0.95 && < 0.96
                       , regex-base >= 0.93 && < 0.94
                       , parsec >= 3.1 && < 3.2
                       , pretty >= 1.1 && < 1.2
                       , process >=1.6 && < 1.7
                       , split >= 0.2.3 && < 0.2.4
                       , tasty-quickcheck >= 0.10.1.1 && < 0.11
                       , template-haskell >= 2.12.0.0 && <= 2.14.0.0
                       , temporary-rc >= 1.2 && < 1.3
                       , text >= 1.2.3.1 && <= 1.2.4.0
                       , text-builder >= 0.6.6.1
                       , time >= 1.6 && <= 1.9.3
                       , unordered-containers >= 0.2.10.0 && < 0.3

                       -- For LH
                       , Diff == 0.3.4

  if impl(ghc < 8.6)
    build-depends:       text == 1.2.3.1
  if impl(ghc >= 8.6)
    build-depends:       text == 1.2.4.0

  default-language:    Haskell2010
  ghc-options:         -Wall
                       -fno-ignore-asserts
                       -- -ddump-rule-rewrites
                       -- -ddump-splices
                       -- -fprof-auto
                       -- -fexternal-interpreter
  other-extensions:    CPP
  if flag(newLH)
    cpp-options: -DNEW_LH

  hs-source-dirs:      src

executable G2
  -- other-modules:   
  -- other-extensions:
  build-depends:         g2
                       , base >= 4.8 && < 5
                       , containers
                       , filepath >= 1.4 && <= 1.5
                       , ghc
                       , hpc >= 0.6.0.0 && < 0.6.1
                       , text
                       , unordered-containers >= 0.2 && < 0.3
  default-language:    Haskell2010
  ghc-options:         -threaded -Wall
                       -- -fprof-auto "-with-rtsopts=-p"
                       -- -fexternal-interpreter -opti+RTS -opti-p
  hs-source-dirs:      exe
  main-is:             Main.hs

executable Inference
  -- other-modules:   
  -- other-extensions:    
  build-depends:         g2
                       , base >= 4.8 && < 5
                       , containers
                       , deepseq >= 1.4 && < 2
                       , liquid-fixpoint
                       , liquidhaskell
                       , text
                       , time
  default-language:    Haskell2010
  ghc-options:         -threaded -Wall
                       -- -fprof-auto "-with-rtsopts=-p"
  hs-source-dirs:      inference
  main-is:             Main.hs

executable QuasiQuote
  -- other-extensions:    
  build-depends:         g2
                       , base >= 4.8 && < 5
                       , time >= 1.6 && <= 1.9.3
  default-language:    Haskell2010
  ghc-options:         -Wall
                       -- -ddump-splices
                       -- -fprof-auto "-with-rtsopts=-p"
  hs-source-dirs:      quasiquote
  main-is:             Main.hs
  other-modules:         Arithmetics.Interpreter
                       , Arithmetics.Test
                       , DeBruijn.Interpreter
                       , DeBruijn.Test
                       , Evaluations
                       , Lambda.Interpreter
